# ✅ 后端服务器环境变量配置
# 复制此文件为 .env 并修改配置值

# 🌐 服务器基础配置
PORT=3002
NODE_ENV=production

# 🔒 跨域配置
CORS_ORIGIN=http://localhost:3000,https://laifu2025.github.io

# 📁 文件存储配置
MAX_FILE_SIZE=10485760
DOCUMENTS_DIR=./documents
UPLOADS_DIR=./uploads

# 📊 日志配置
LOG_LEVEL=info
ENABLE_ACCESS_LOG=true

# 🛡️ 安全配置
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# 🔧 可选配置
AUTO_CLEANUP_UPLOADS=true
CLEANUP_INTERVAL_HOURS=24 